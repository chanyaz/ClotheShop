<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ShopActionBar</item>
    </style>

    <style name="ShopActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/ShopTitleTextStyle</item>
    </style>

    <style name="ShopTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/lightOrange</item>
    </style>

    <style name="ShopCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tabs_text_size</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabSelectedTextColor">@color/lightOrange</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="feature_header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textSize">@dimen/feature_title_text_size</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="feature_header_sub_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/feature_subtitle_text_size</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="product_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/product_info_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="product_item_new_discount_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/lightOrange</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingStart">@dimen/product_item_new_text_padding_start</item>
        <item name="android:paddingEnd">@dimen/product_item_new_text_padding_end</item>
        <item name="android:paddingTop">@dimen/product_item_new_text_padding_top</item>
        <item name="android:paddingBottom">@dimen/product_item_new_text_padding_bottom</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/product_item_new_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/product_item_new_text_margin_top</item>
    </style>

    <style name="product_main_content">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
        <item name="android:paddingTop">63dp</item>
        <item name="android:layout_marginStart">@dimen/product_spacing_and_margins</item>
        <item name="android:layout_marginEnd">@dimen/product_spacing_and_margins</item>
        <item name="android:layout_marginBottom">@dimen/product_spacing_and_margins</item>
    </style>

    <style name="product_cart_menu_item">
        <item name="android:background">@drawable/circle</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:minWidth">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="section_text_left_info" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textSize">@dimen/feature_item_layoutextra_textsize</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--<style name="Widget.Design.BottomSheet.Modal" parent="@android:style/Widget">-->
        <!--<item name="android:background">?android:colorBackground</item>-->
        <!--<item name="behavior_peekHeight">auto</item>-->
        <!--<item name="behavior_hideable">true</item>-->
        <!--<item name="behavior_skipCollapsed">false</item>-->
    <!--</style>-->
    <style name="SizeParagraph2" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_paragraph2</item>
    </style>
    <style name="SizeParagraph2.Black" parent="@style/SizeParagraph2">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="ProductDescriptionBackgroundViewHolderContainer">
        <item name="android:background">@drawable/product_details_box_selectable_item_selector</item>
    </style>
    <style name="SmallDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item>
    </style>
    <style name="SmallDivider.Recommendations" parent="@style/SmallDivider">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/black_12a</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="SmallDividerVertical">
        <item name="android:layout_width">1.0dip</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="SmallDividerVertical.Recommendations" parent="@style/SmallDividerVertical">
        <item name="android:background">@color/grey_alto</item>
        <item name="android:layout_height">24.0dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="PDPItem.Title" parent="@style/PDPItem">
        <item name="android:textAppearance">@style/SizeParagraph2.Black</item>
    </style>
    <style name="PDPItem">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="ProductItemsAction">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/grey_silver</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/border_margin</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="SizeParagraph3" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_paragraph3</item>
    </style>
    <style name="SizeParagraph3.Black" parent="@style/SizeParagraph3">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SizeParagraph3.MediumGray" parent="@style/SizeParagraph3">
        <item name="android:textColor">@color/grey_tundora</item>
    </style>
</resources>
